# Web Development Environment Variables Example

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Set to 'true' to use API backend, 'false' to use local Dexie.js storage
VITE_USE_API_BACKEND=true

# API Base URL (for local development)
VITE_API_BASE_URL=http://localhost:4000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Medical Clinic CMS
VITE_APP_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
VITE_ENABLE_DEBUG=false
VITE_SHOW_MOCK_DATA=false

# Laboratory Features
# Set to 'true' to disable lab test checkboxes that don't have result forms
VITE_DISABLE_UNSUPPORTED_LAB_TESTS=true

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
# Cloudinary Cloud Name (get from Cloudinary Dashboard)
VITE_CLOUDINARY_CLOUD_NAME=ddl4zzkxs

# Cloudinary Upload Preset (create an unsigned upload preset in Cloudinary)
# To create: Settings → Upload → Upload presets → Add upload preset
# Set to unsigned, folder: patients, transformations: max 800x800
VITE_CLOUDINARY_UPLOAD_PRESET=patient_photos_unsigned

# =============================================================================
# ENVIRONMENT EXAMPLES
# =============================================================================
# Local Development:
# VITE_API_BASE_URL=http://localhost:4000

# Staging/Production:
# VITE_API_BASE_URL=https://your-api-domain.com
# ============================================================================

# Authentication (not yet implemented)
VITE_ENABLE_AUTH=true

# PWA and Offline Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# Analytics (not yet implemented)
VITE_ENABLE_ANALYTICS=true

# ============================================================================
# Application Settings
# ============================================================================

# Basic App Info
VITE_APP_NAME="Nx Starter"
VITE_APP_VERSION="1.0.0"

# Debug and Logging
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# ============================================================================
# Storage Configuration
# ============================================================================

# Local Storage Prefixes
VITE_STORAGE_PREFIX="nx-starter"
VITE_SESSION_PREFIX="nx-starter-session"

# Cache Settings
VITE_CACHE_TIMEOUT=300000
VITE_MAX_CACHE_SIZE=50

# ============================================================================
# UI Settings
# ============================================================================

# Theme and Appearance
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATIONS_ENABLED=true
VITE_COMPACT_MODE=false

# ============================================================================
# Environment-Specific Examples
# ============================================================================

# Development Environment Example:
# VITE_ENVIRONMENT=development
# VITE_USE_API_BACKEND=false
# VITE_DEBUG_MODE=true
# VITE_LOG_LEVEL=debug

# Production Environment Example:
# VITE_ENVIRONMENT=production
# VITE_USE_API_BACKEND=true
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_ENABLE_ANALYTICS=true

# Testing Environment Example:
# VITE_ENVIRONMENT=test
# VITE_USE_API_BACKEND=false
# VITE_ENABLE_ANALYTICS=false
# VITE_API_TIMEOUT=5000